<!DOCTYPE html>
<html>
<head>
	<title>User List</title>
</head>
<body>
	<h1> Userlist</h1>

	<a href="/ahome">Back</a> | 
	<a href="/logout">logout</a> 
	<br>

	<table border="1">
		<tr>
			<td>ID</td>
			<td>Name</td>
			<td>User Name</td>
			<td>Company Name</td>
			<td>Contact No</td>
			<td>Type</td>
			<td>Action</td>
		</tr>
	    <% 
			user.forEach( function(std){ %>
			<tr>
				<td><%= std.id %></td>
				<td><%= std.name %></td>
				<td><%= std.username %></td>
				<td><%= std.companyname %></td>
				<td><%= std.contactno %></td>
				<% if(std.type == 1){%>
					<td>Admin</td>
				<%}
				else{%>
					<td>Employee</td>
				<%}%>
				<td>
					<a href="/user/edit/<%= std.id %>">Edit</a> |
					<a href="/user/delete/<%= std.id %>">Delete</a>
				</td>
			</tr>
		<%
			}); 
		%>
		
	</table>

</body>
</html>