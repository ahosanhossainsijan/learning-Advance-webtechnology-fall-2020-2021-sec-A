<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/styles/mystyle.css">
	</head>
	<body>
		<div class="text-center">
			<h1 class="header">Admin</h1>
		</div>
		<!--menu starts-->
		<div class="text-center">
			<a href="/Admin" class="btn btn-primary">Dashboard</a>
			<a href="/admin/allbooks" class="btn btn-warning">All Books</a>
			<a href="/admin/addnewbook" class="btn btn-danger">Add Book</a>
			<a href="/admin/allusers" class="btn btn-warning">All Users</a>
            <a href="/admin/addnewadmin" class="btn btn-info">Add New Admin</a>
            <a href="/admin/renthistory" class="btn btn-info">See Purchase History</a>
            <a href="/admin/profile" class="btn btn-info">Profile</a>
			<a href="/logout" class="btn btn-danger">Logout</a>
        </div>
        
        <div class="center">
            <h1 class="text text-center">Add New Book</h1>
            <form action="" method="post" class="form-horizontal form-material">

                
                <div class="form-group">
                    <h4 class="text">Book Name</h4> 
                    <input type="text" name="bookname" class="form-control" >
                </div>
                <div class="form-group">
                    <h4 class="text">Author Name</h4> 
                    <input type="text" name="authorname" class="form-control" >
                </div>
                <div class="form-group">
                    <h4 class="text">Select Book Category</h4> 
                    <select name="category" class="form-control">
                        <option selected hidden>Select Book Category</option>
                        <option value="Story">Story</option>
                        <option value="History">History</option>
                        <option value="Poem">Poem</option>
                    </select>
                </div>

                <div class="form-group">
                    <h4 class="text">Price</h4> 
                    <input type="text" name="price" class="form-control">
                </div>
                
                <div class="form-group">
                    <h4 class="text">Image</h4> 
                    <input type="text" name="image" class="form-control">
                </div>
                <div class="form-group">
                    <h4 class="text">No of Book Available</h4> 
                    <input type="text" name="availability" class="form-control">
                </div>

                <div class="form-group text-center">
                    
                    <input type="submit" name="addnewbook" class="btn btn-success" value="Add new Book" class="form-control">
                </div>
            </form>
        </div>   
	</body>
</html>