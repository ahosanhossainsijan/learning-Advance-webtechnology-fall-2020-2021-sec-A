<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="/assets/styles/mystyle.css">
	</head>
	<body>
		<div class="text-center">
			<h1 class="header">Admin</h1>
		</div>
		<!--menu starts-->
		<div class="text-center">
            <a href="/user" class="btn btn-primary">Dashboard</a>
            <a href="/user/allbooks" class="btn btn-warning">All Books</a>
            <a href="/user/purchasehistory" class="btn btn-info">See Purchase History</a>
            <a href="/user/profile" class="btn btn-info">Profile</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
        <div class="center">
            <h3 class="text">Purchase History</h3>
            <table class="table table-striped">
                <thead>
                    <td>Book</td>
                    <td>User's Name</td>
                    <td>Payment Method</td>
                    <td>Amount</td>
                    <td>Purchase Date</td>
                </thead>
                <tbody>
                    <% 
                        purchase.forEach( function(std){ %>
                            <tr>
                                <td><%= std.bid %></td>
                                <td><%= std.uid %></td>
                                <% if(std.paymentmethod == 0){%>
                                    <td>Cash On Arrival</td>
                                <%}
                                else if(std.paymentmethod == 1){%>
                                    <td>Bkash</td>
                                else if(std.paymentmethod == 2){%>
                                    <td>Rocket</td>
                                <%}else {%>
                                    <td>Internet Banking</td>
                                <%}%>
                                <td><%= std.amount %></td>
                                <td><%= std.purchasedate %></td>
                            </tr>
        
                    <%
                        }); 
                    %>
                </tbody>
            </table>
        </div>	
	</body>
</html>